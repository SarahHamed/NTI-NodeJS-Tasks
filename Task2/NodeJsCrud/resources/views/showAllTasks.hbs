{{>header}}
{{>navbar}}
<h4 class="text-center m-5">Show All Tasks</h4>
<div class="table-responsive mx-5">
<table class="table table-striped container m-auto" >
    <thead>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Content</th>
    <th>Status</th>
    <th>Delete</th>
    <th>Edit</th>
    <th>Show</th>
  </tr>
  </thead>
{{#each allTasks}}
<tr>
    <td><a href="/show/{{this.id}}"> {{this.id}}</a></td>
    <td>{{this.title}}</td>
    <td>{{this.content}}</td>
    <td>{{this.status}}</td>
    <td><a class="btn btn-sm btn-dark" href="/delete/{{this.id}}">delete</a></td>
    <td><a class="btn btn-sm btn-danger px-3" href="/edit/{{this.id}}">edit</a></td>
    <td><a class="btn btn-sm btn-dark px-3" href="/show/{{this.id}}">show</a></td>
</tr>
{{/each}}
</table>
</div>
{{>footer}}